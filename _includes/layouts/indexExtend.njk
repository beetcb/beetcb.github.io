---
layout: base
eleventyExcludeFromCollections: true
---
<div class="post-container">
    <section id="postList" class="post-collection">
        {% for allPage in collections.all %}
            <a data-index="{{ allPage.data.post }}" class="post" href="{{ allPage.url }}">
                <img class="post-nailimg" src="{{ allPage.data.nailimg }}" alt="{{ allPage.data.title }}">
                <div class="description">
                    <h1>{{ allPage.data.title }}</h1>
		    <small>
		    {{ page.date.toDateString() }}
		    </small>
                </div>
            </a>
        {% endfor %}
    </section>
    <section class="post-aside">
	<div class="profile">
	    {{ content | safe }}

	</div>
	<div id="tagList" class="tagList">
        {% for allPage in collections.all %}
            {% if allPage.data.tags.length > 1 %}
                {% for allTag in allPage.data.tags %}
                <a data-index="{{ allPage.data.post }}" class="tag" href="{{ allPage.url }}">
                    # {{ allTag }}
                </a>
                {% endfor %}
            {% else %}
                <a data-index="{{ allPage.data.post }}" class="tag" href="{{ allPage.url }}">
                    # {{ allPage.data.tags }}
                </a>
            {% endif %}
        {% endfor %}
	</div>
    </section>
</div>
