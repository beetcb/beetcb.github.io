---
layout: base
eleventyExcludeFromCollections: true
---
<div class="post-container">
    <section class="post-collection">
        {% for allPage in collections.all %}
        <a style="background-image: url({{ allPage.data.nailimg }});" class="post" href="{{ allPage.url }}">
            <img class="post-nailimg" src="{{ allPage.data.nailimg }}" alt="{{ allPage.data.title }}">
            <div class="description">
                <h1>{{ allPage.data.title }}</h1>
            </div>
        </a>
        {% endfor %}
    </section>
    <section class="post-aside">
        <div style="background:pink;width:300px;height:300px"></div>
    </section>
</div>